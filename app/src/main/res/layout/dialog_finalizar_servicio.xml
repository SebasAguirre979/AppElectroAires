            android:background="@drawable/background_rounded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Placa:" />

        <TextView
            android:id="@+id/textPlaca2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
